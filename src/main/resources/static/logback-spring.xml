<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <property name="LOG_PATH" value="./logs"/>
    <property name="LOG_PATTERN"
              value="%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n"/>

    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ITEM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/business_item.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/business_item.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ORDER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/business_order.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/business_order.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="CART_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/business_cart.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/business_cart.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="MEMBER_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/business_member.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/business_member.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <appender name="ADMIN_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_PATH}/business_admin.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_PATH}/archived/business_admin.%d{yyyy-MM-dd}.log.gz</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <pattern>${LOG_PATTERN}</pattern>
        </encoder>
    </appender>

    <!-- Item 관련 로그 -->
    <logger name="com.example.hanaro.service.impl.ItemServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="ITEM_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.ItemController" level="INFO" additivity="false">
        <appender-ref ref="ITEM_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Order 관련 로그 -->
    <logger name="com.example.hanaro.service.impl.OrderServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="ORDER_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.OrderController" level="INFO" additivity="false">
        <appender-ref ref="ORDER_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Cart 관련 로그 -->
    <logger name="com.example.hanaro.service.impl.CartServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="CART_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.CartController" level="INFO" additivity="false">
        <appender-ref ref="CART_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Member 관련 로그 -->
    <logger name="com.example.hanaro.service.impl.MemberServiceImpl" level="INFO" additivity="false">
        <appender-ref ref="MEMBER_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.MemberController" level="INFO" additivity="false">
        <appender-ref ref="MEMBER_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <!-- Admin 관련 로그 -->
    <logger name="com.example.hanaro.controller.AdminItemController" level="INFO" additivity="false">
        <appender-ref ref="ADMIN_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.AdminOrderController" level="INFO" additivity="false">
        <appender-ref ref="ADMIN_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="com.example.hanaro.controller.AdminMemberController" level="INFO" additivity="false">
        <appender-ref ref="ADMIN_FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>